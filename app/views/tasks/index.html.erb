<% if logged_in? %>
  <h1>タスク一覧</h1>
  
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>

  <%= link_to '新規タスクの投稿', new_task_path %>
  <%= link_to 'Logout', logout_path, method: :delete %>
<% else %>
  <%= link_to 'Sign up now!', signup_path %>
  <%= link_to 'Login', login_path %>
<% end %>